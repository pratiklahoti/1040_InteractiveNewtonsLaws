<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.interactivenewtonslaws"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.interactivenewtonslaws.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.interactivenewtonslaws.DisplayLaw"
            android:label="@string/title_activity_display_law" >
        </activity>
        <activity
            android:name="com.example.interactivenewtonslaws.First_Animation"
            android:label="@string/title_activity_law__animation"
            android:parentActivityName="com.example.interactivenewtonslaws.DisplayLaw" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.interactivenewtonslaws.DisplayLaw" />
        </activity>
        <activity
            android:name="com.example.interactivenewtonslaws.Second_Animation"
            android:label="@string/title_activity_second__animation"
            android:parentActivityName="com.example.interactivenewtonslaws.DisplayLaw" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.interactivenewtonslaws.DisplayLaw" />
        </activity>
        <activity
            android:name="com.example.interactivenewtonslaws.SecondAnimationContinued"
            android:label="@string/title_activity_second_animation_continued"
            android:parentActivityName="com.example.interactivenewtonslaws.Second_Animation" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.interactivenewtonslaws.Second_Animation" />
        </activity>
        <activity
            android:name="com.example.interactivenewtonslaws.ThirdAnimation"
            android:label="@string/title_activity_third_animation"
            android:parentActivityName="com.example.interactivenewtonslaws.DisplayLaw" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.interactivenewtonslaws.DisplayLaw" />
        </activity>
        <activity
            android:name="com.example.interactivenewtonslaws.LawDisplay"
            android:label="@string/title_activity_law_display"
            android:parentActivityName="com.example.interactivenewtonslaws.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.interactivenewtonslaws.MainActivity" />
        </activity>
    </application>

</manifest>
