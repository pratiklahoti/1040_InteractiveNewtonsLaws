<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bliss"
    tools:context=".First_Animation" >

    <TextView
        android:id="@+id/message_1"
        android:layout_width="250sp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/message_2"
        android:layout_marginBottom="21dp"
        android:text="@string/blank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_3"
        android:layout_width="250sp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/message_1"
        android:layout_alignBottom="@+id/message_1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:text="@string/blank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_2"
        android:layout_width="250sp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/blank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_ball1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/message_1"
        android:layout_below="@+id/message_1"
        android:layout_marginRight="52dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ball_1" />

    <ImageView
        android:id="@+id/img_ball2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/message_2"
        android:layout_alignTop="@+id/img_ball1"
        android:src="@drawable/ball_2" />

    <Button
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/message_3"
        android:layout_below="@+id/img_ball2"
        android:background="@color/dark_green"
        android:text="@string/home_string"
        android:textColor="@color/White"
        android:textStyle="bold" />

</RelativeLayout>